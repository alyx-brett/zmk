    /* }; */
#define BASE  0
#define LOWER 1
#define RAISE 2

    keymap0: keymap {
        compatible = "zmk,keymap";
        base {
            bindings = <
&kp Q  &kp W  &kp E  &kp R
&kp Y  &kp U  &kp I  &kp O
&kp A  &kp S  &kp D  &kp F
&kp H  &kp N  &kp K  &kp L
&kp N1 &kp N2 &kp N3 &kp N4 &kp N5
            >;
        };
    };
};
