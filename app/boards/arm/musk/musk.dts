/dts-v1/;
#include <nordic/nrf52840_qiaa.dtsi>
#include <dt-bindings/zmk/matrix_transform.h>

/ {
    model = "musk";
    compatible = "musk";

    chosen {
        zephyr,code-partition = &code_partition;
        zephyr,sram = &sram0;
        zephyr,flash = &flash0;
        zmk,kscan = &matrix_kscan;
        zmk,matrix_transform = &transform;
        /* zmk,steno_flash = &spi_flash; */
        zmk,led-widgets-dev = &leds;
        zmk,battery = &bat;
    };

    transform: transform {
        compatible = "zmk,matrix-transform";
        columns = <5>;
        rows = <4>;
        map = <
RC(0,0) RC(0,1) RC(0,2) RC(0,3)
RC(1,0) RC(1,1) RC(1,2) RC(1,3)
RC(2,0) RC(2,1) RC(2,2) RC(2,3)
RC(3,0) RC(3,1) RC(3,2) RC(3,3) RC(3,4)
        >;
    };

    matrix_kscan: kscan0 {
        compatible = "zmk,kscan-gpio-matrix";
        label = "matrix_kscan";
        diode-direction = "col2row";
        row-gpios
            = <&gpio0 20 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>
            , <&gpio0 23 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>
            , <&gpio0 21 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>
            , <&gpio0 15 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>
            ;
        col-gpios
            = <&gpio0 25 GPIO_ACTIVE_HIGH>
            , <&gpio1  0 GPIO_ACTIVE_HIGH>
            , <&gpio0 24 GPIO_ACTIVE_HIGH>
            , <&gpio0 22 GPIO_ACTIVE_HIGH>
            , <&gpio0 17 GPIO_ACTIVE_HIGH>
            ;
    };

    leds: leds {
        compatible = "pwm-leds";
        red_led: led_r {
            pwms = <&pwm0 5>;
            label = "Red LED";
        };
        green_led: led_g {
            pwms = <&pwm0 4>;
            label = "Green LED";
        };
        blue_led: led_b {
            pwms = <&pwm0 26>;
            label = "Blue LED";
        };
    };

    nood {
        compatible = "pwm-leds";
        strip: led_y {
            pwms = <&pwm0 35>;
            label = "nOOd";
        };
    };

    bat: vbatt {
        compatible = "zmk,battery-voltage-divider";
        label = "BATTERY";
        io-channels = <&adc 7>;
        output-ohms = <1>;
        full-ohms = <(1 + 1)>;
        power-gpios = <&gpio0 27 GPIO_ACTIVE_LOW>;
    };

    led-widgets {
        compatible = "zmk,led-widgets";
        boot {
            boot {
                priority = <100>;
                blue { len-ms = <100>; brightness = <0 0 50>; };
                off { len-ms = <100>; };
                blue2 { len-ms = <100>; brightness = <0 0 50>; };
            };
        };
        battery {
            low {
                arg = <30>;
                priority = <50>;
                period-ms = <30000>;
                green { len-ms = <100>; brightness = <0 20 0>; };
                red { len-ms = <200>; brightness = <100 0 0>; };
            };
            mid {
                arg = <70>;
                priority = <50>;
                period-ms = <30000>;
                green { len-ms = <100>; brightness = <0 20 0>; };
                yellow { len-ms = <200>; brightness = <100 100 0>; };
            };
            high {
                arg = <100>;
                priority = <50>;
                period-ms = <30000>;
                green { len-ms = <50>; brightness = <0 100 0>; };
            };
        };
        layer {
            lower {
                arg = <1>;
                priority = <20>;
                stat { brightness = <0 0 20>; };
            };
            raise {
                arg = <2>;
                priority = <20>;
                stat { brightness = <0 20 0>; };
            };
            game {
                arg = <3>;
                priority = <20>;
                stat { brightness = <0 0 50>; };
            };
            steno {
                arg = <4>;
                priority = <20>;
                stat { brightness = <50 0 0>; };
            };
        };
        output {
            usb {
                arg = <0>;
                priority = <100>;
                stat { len-ms = <200>; brightness = <0 75 0>; };
            };
            ble {
                arg = <1>;
                priority = <100>;
                stat { len-ms = <200>; brightness = <0 0 100>; };
            };
        };
        profile {
            0 {
                arg = <0>;
                priority = <90>;
                head { len-ms = <50>; brightness = <0 0 50>; };
                off { len-ms = <150>; };
                tail { len-ms = <100>; brightness = <100 0 0>; };
            };
            1 {
                arg = <1>;
                priority = <90>;
                head { len-ms = <50>; brightness = <0 0 50>; };
                off { len-ms = <150>; };
                tail { len-ms = <100>; brightness = <0 100 0>; };
            };
            2 {
                arg = <2>;
                priority = <90>;
                head { len-ms = <50>; brightness = <0 0 50>; };
                off { len-ms = <150>; };
                tail { len-ms = <100>; brightness = <0 0 100>; };
            };
        };
    };
};

&pwm0 {
    status = "okay";
    ch0-pin = <5>;
    ch1-pin = <4>;
    ch2-pin = <26>;
    ch3-pin = <35>;
    ch0-inverted;
    ch1-inverted;
    ch2-inverted;
};

&adc {
    status = "okay";
};

&gpiote {
    status = "okay";
};

&gpio0 {
    status = "okay";
};

&gpio1 {
    status = "okay";
};

&usbd {
    status = "okay";
};


&flash0 {
    /*
     * For more information, see:
     * http://docs.zephyrproject.org/latest/devices/dts/flash_partitions.html
     */
    partitions {
        compatible = "fixed-partitions";
        #address-cells = <1>;
        #size-cells = <1>;

        code_partition: partition@0 {
            label = "code_partition";
            reg = <0x00000000 0x000e0000>;
        };

        /*
         * Storage partition will be used by FCB/LittleFS/NVS
         * if enabled.
         */
        storage_partition: partition@e0000 {
            label = "storage";
            reg = <0x000e0000 0x00020000>;
        };
    };
};

&spi0 {
    compatible = "nordic,nrf-spim";
    status = "okay";
    sck-pin = <40>;
    mosi-pin = <6>;
    miso-pin = <7>;

    cs-gpios = <&gpio0 1 GPIO_ACTIVE_LOW>, <&gpio0 11 GPIO_ACTIVE_LOW>, <&gpio0 12 GPIO_ACTIVE_LOW>;
    /* spi_flash: flash@0 { */
    /*     compatible = "jedec,spi-nor"; */
    /*     status = "okay"; */
    /*     reg = <0>; */
    /*     spi-max-frequency = <8000000>; */
    /*     label = "MT25Q"; */
    /*     jedec-id = [ef 40 18]; */
    /*     size = <0x8000000>; */
    /*     has-dpd; */
    /*     t-enter-dpd = <3000>; */
    /*     t-exit-dpd = <30000>; */
    /* }; */
    imu: imu@1 {
        compatible = "st,lsm6dsl";      // XXX device?
        status = "okay";
        reg = <1>;
        spi-max-frequency = <10000000>;
        label = "LSM6";
        irq-gpios = <&gpio0 0 GPIO_ACTIVE_HIGH>;
    };
};

&spi1 {
    compatible = "nordic,nrf-spim";
    status = "okay";
    sck-pin = <16>;
    mosi-pin = <14>;
    miso-pin = <14>;

    cs-gpios = <&gpio0 12 GPIO_ACTIVE_LOW>;
    mouse: mouse@0 {
        compatible = "pixart,pmw3610";
        status = "okay";
        reg = <0>;
        spi-max-frequency = <1000000>;
        label = "pmw3610";
        irq-gpios = <&gpio0 8 GPIO_ACTIVE_LOW>;
        rst-gpios = <&gpio1 9 GPIO_ACTIVE_LOW>;
    };
};
